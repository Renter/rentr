<b>Post A Listing</b>

<div>
<%=form_for @listing do |f|%>
  <div>
    <%=f.label :name%>
    <%=f.text_field :name%>
  </div>
  
  <div>  
    <%=f.label :description%>
    <%=f.text_field :description%>
  </div>
 
  <div>
    <%=f.label :image_url%>
    <%=f.text_field :image_url%>
  </div>
  
  <div>
    <%=f.hidden_field :user_id, value: current_user.id %>
  </div>
  
  <div>
    <%=f.submit%>
  </div>
<%end%>
</div>

