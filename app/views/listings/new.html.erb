<b>Post A Listing</b>

<%= form_for @listing do |f|%>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%=f.select :location_id, @listing.location_names%>  
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :street %>
    <%= f.text_field :street%>
  </div>

  <div>
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>
  
  <div>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
</div>
