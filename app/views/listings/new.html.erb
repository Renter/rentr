<b>Post A Listing</b>

<div>
<body>
<%=form_for @listing do |f|%>
  <%=f.label :name%>
  <%=f.text_field :name%>
  <%=f.label :description%>
  <%=f.text_field :description%>
  <%=f.label :image_url%>
  <%=f.text_field :image_url%>
  <%=f.hidden_field :user_id, value=current_user.id %>
  <%=f.submit%>
<%end%>
</body>
</div>

