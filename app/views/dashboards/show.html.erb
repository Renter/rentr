<%if current_user.is_admin%>
  <h1> Admin Dashboard </h1>
<%else%>
  <h1> Dashboard </h1>
<%end%>

<p> Locations: </p>
<ul>
  <%@dashboard.list_all.each do |l|%>
    <li>
      <%=l.name%>, <%=l.state%>
    </li>
  <%end%>
</ul>

<%if current_user.is_admin%>
 <div>
 <p> Admin Options </p>
 
  <p> Add a new city: </p>
  <div>
    <%=form_for Location.new do |f|%>
    
    <div>
      <%=f.text_field :name, placeholder: "name"%>
    </div>
    
    <div>
      <%=f.text_field :state, placeholder: "state"%>
    </div>
    
    <div>
      <%=f.submit%>
    </div>

    <%end%>
  </div>
 </div>
<%end%>
